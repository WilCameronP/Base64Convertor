@model Base64
@{
    ViewData["Title"] = "Base64 String To File";
}
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-12">
        <form asp-controller="Home" asp-action="Index" method="post" target="_blank" data-val="true">
            <div class="form-group">
                <label asp-for="Text">Text:</label>
                <textarea class="form-control" asp-for="Text" placeholder="Paste Base64 text content in here." rows="20" style="resize:vertical;"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group" style="min-height:30px;">
                <label asp-for="MIMEType"></label>:
                <label class="radio-inline">
                    <input type="radio" name="MIMEType" value="application/pdf" checked /> application/pdf
                </label>
                <label class="radio-inline">
                    <input type="radio" name="MIMEType" value="images/png" /> images/png
                </label>
                <label class="radio-inline">
                    <input type="radio" name="MIMEType" value="images/jpeg" /> images/jpeg
                </label>
                <label class="radio-inline">
                    <input type="radio" name="MIMEType" value="images/bmp" /> images/bmp
                </label>
                <label class="radio-inline">
                    <input type="radio" name="MIMEType" value="images/gif" /> images/gif
                </label>
                <label class="radio-inline">
                    <input type="radio" name="MIMEType" value="text/xml" /> text/xml
                </label>
                <label class="radio-inline" title="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet">
                    <input type="radio" name="MIMEType" value="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" /> .xlsx
                </label>
                <label class="radio-inline">
                    <input type="radio" name="MIMEType" value="Other" /> Other
                </label>
                <input type="text" asp-for="OtherMIMEType" class="form-control hidden" style="width: 200px; height: 25px; display: inline; vertical-align:top;" />
            </div>
            <button type="submit" class="btn btn-primary">Generate</button>
        </form>
    </div>
</div>
@section Scripts{
    @Html.Partial("_ValidationScriptsPartial")
    <script>
        $(document).ready(function () {
            var $types = $("input[name='MIMEType']");
            $types.change(function () {
                if ($types.index($(this)) == ($types.length - 1) && $(this).prop("checked"))
                    $("#OtherMIMEType").removeClass("hidden");
                else
                    $("#OtherMIMEType").addClass("hidden");
            });
        });
    </script>
}